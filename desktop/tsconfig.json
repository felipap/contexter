{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"strict": true
	},
	"include": ["backend/**/*", "windows/**/*", "shared-types.ts", "*.config.ts"],
	"exclude": ["node_modules", "dist"]
}
