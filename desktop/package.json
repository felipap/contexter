{
	"name": "context-desktop",
	"productName": "Context",
	"version": "1.0.0",
	"description": "Context desktop app",
	"main": "dist/backend/main.js",
	"scripts": {
		"dev": "concurrently -k -n main,preload,renderer,electron -c blue,cyan,green,magenta \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"npm run dev:electron\"",
		"dev:main": "vite build --config vite.backend.config.ts --watch",
		"dev:preload": "vite build --config vite.preload.config.ts --watch",
		"dev:renderer": "vite --config vite.window.config.ts",
		"dev:electron": "sleep 2 && electron .",
		"build": "npm run build:main && npm run build:preload && npm run build:renderer",
		"build:main": "vite build --config vite.backend.config.ts",
		"build:preload": "vite build --config vite.preload.config.ts",
		"build:renderer": "vite build --config vite.window.config.ts",
		"start": "electron .",
		"lint": "eslint --ext .ts,.tsx .",
		"ts-check": "tsc --noEmit"
	},
	"keywords": [],
	"author": {
		"name": "Felipe Arag√£o",
		"email": "faragaop@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"concurrently": "^9.1.0",
		"electron": "39.2.7",
		"eslint": "^8.57.1",
		"eslint-plugin-import": "^2.32.0",
		"typescript": "^5.0.0",
		"vite": "^5.4.21"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.18",
		"@vitejs/plugin-react": "^5.1.2",
		"electron-store": "^8.1.0"
	}
}
